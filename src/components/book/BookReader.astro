<script>
  document.addEventListener('DOMContentLoaded', () => {
    const chapterDataElement = document.getElementById('chapter-data');
    const chapters = chapterDataElement ? JSON.parse(chapterDataElement.textContent || '[]') : [];
    
    let currentChapter = 0;
    
    const prevBtn = document.getElementById('prev-chapter');
    const nextBtn = document.getElementById('next-chapter');
    const tocToggle = document.getElementById('toc-toggle');
    const closeToc = document.getElementById('close-toc');
    const toc = document.getElementById('table-of-contents');
    const tocItems = document.querySelectorAll('.toc-item');
    const chapterTitle = document.getElementById('current-chapter-title');
    const progressFill = document.getElementById('progress-fill');
    const chapterSections = document.querySelectorAll('.chapter-section');
    
    function showChapter(index: number) {
      if (index < 0 || index >= chapters.length) return;
      
      currentChapter = index;
      
      // Hide all chapters, show current
      chapterSections.forEach((section, i) => {
        (section as HTMLElement).style.display = i === index ? 'block' : 'none';
      });
      
      // Update navigation
      if (prevBtn) prevBtn.disabled = index === 0;
      if (nextBtn) nextBtn.disabled = index === chapters.length - 1;
      
      // Update title
      if (chapterTitle && chapters[index]) {
        chapterTitle.textContent = `Chapter ${chapters[index].order}: ${chapters[index].title}`;
      }
      
      // Update progress
      if (progressFill) {
        const progress = ((index + 1) / chapters.length) * 100;
        progressFill.style.width = `${progress}%`;
      }
      
      // Update TOC active state
      tocItems.forEach((item, i) => {
        item.classList.toggle('active', i === index);
      });
      
      // Scroll to top of content
      const pageContent = document.querySelector('.page-content');
      if (pageContent) pageContent.scrollTop = 0;
      
      // Save progress
      localStorage.setItem('bookReaderProgress', JSON.stringify({ chapter: index }));
    }
    
    // Navigation buttons
    prevBtn?.addEventListener('click', () => showChapter(currentChapter - 1));
    nextBtn?.addEventListener('click', () => showChapter(currentChapter + 1));
    
    // TOC toggle
    tocToggle?.addEventListener('click', () => toc?.classList.toggle('hidden'));
    closeToc?.addEventListener('click', () => toc?.classList.add('hidden'));
    
    // TOC items
    tocItems.forEach((item) => {
      item.addEventListener('click', () => {
        const chapterIndex = parseInt((item as HTMLElement).dataset.chapter || '0');
        showChapter(chapterIndex);
        toc?.classList.add('hidden');
      });
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') showChapter(currentChapter - 1);
      if (e.key === 'ArrowRight') showChapter(currentChapter + 1);
      if (e.key === 'Escape') toc?.classList.add('hidden');
    });
    
    // Load saved progress
    const savedProgress = localStorage.getItem('bookReaderProgress');
    if (savedProgress) {
      const { chapter } = JSON.parse(savedProgress);
      if (chapter && chapter < chapters.length) {
        showChapter(chapter);
      }
    }
  });
</script>
