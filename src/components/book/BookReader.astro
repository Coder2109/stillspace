---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  chapters: CollectionEntry<'book'>[];
}

const { chapters } = Astro.props;

// Sort chapters by order
const sortedChapters = chapters.sort((a, b) => a.data.order - b.data.order);

// Render all chapter content
const renderedChapters = await Promise.all(
  sortedChapters.map(async (chapter) => {
    const { Content } = await chapter.render();
    return {
      ...chapter,
      Content
    };
  })
);
---

<div class="book-reader-wrapper">
  <div id="book-reader" class="book-reader-container">
    <!-- Book Container -->
    <div class="book-container">
      <!-- Book Pages -->
      <div class="book-pages">
        <div class="book-page" id="book-page">
          <div class="page-content">
            <div id="chapter-content" class="chapter-content prose prose-lg dark:prose-invert">
              {renderedChapters.map((chapter, index) => (
                <div 
                  class="chapter-section" 
                  data-chapter={index}
                  style={index === 0 ? '' : 'display: none;'}
                >
                  <chapter.Content />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      <!-- Navigation Controls -->
      <div class="book-navigation">
        <button id="prev-chapter" class="nav-btn prev-btn" disabled>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Previous
        </button>
        
        <div class="chapter-info">
          <span id="current-chapter-title" class="chapter-title">
            Chapter 1: {sortedChapters[0]?.data.title}
          </span>
          <div class="progress-bar">
            <div id="progress-fill" class="progress-fill"></div>
          </div>
        </div>
        
        <button id="next-chapter" class="nav-btn next-btn">
          Next
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Table of Contents Toggle -->
    <button id="toc-toggle" class="toc-toggle" title="Table of Contents">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    
    <!-- Table of Contents -->
    <div id="table-of-contents" class="table-of-contents hidden">
      <div class="toc-header">
        <h3>Table of Contents</h3>
        <button id="close-toc" class="close-btn">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="toc-list">
        {sortedChapters.map((chapter, index) => (
          <button 
            class={`toc-item ${index === 0 ? 'active' : ''}`}
            data-chapter={index}
          >
            <div class="toc-chapter-number">Chapter {chapter.data.order}</div>
            <div class="toc-chapter-title">{chapter.data.title}</div>
          </button>
        ))}
      </div>
    </div>
  </div>
</div>

<!-- Chapter Data -->
<script type="application/json" id="chapter-data">
  {JSON.stringify(sortedChapters.map((chapter, index) => ({
    index,
    title: chapter.data.title,
    order: chapter.data.order,
    description: chapter.data.description
  })))}
</script>

